<div class="banner-navbar">
  <%= image_tag 'road-icon.png', class: "logo-footer" %>
   <div>
    <% if user_signed_in? %>
      <%= link_to "Profile  ", user_show_path, id: "colorwh-head", class: 'menu-item' %>
      <%= link_to "Help  ", user_show_path, id: "colorwh-head", class: 'menu-item' %>
      <%= link_to "Log out", destroy_user_session_path, method: :delete, id: "colorwh-head", class: 'menu-item' %>
    <% else %>
     <%= link_to "Sign in", new_user_session_path, id: "colorwh-head" %>
     <%= link_to "Sign up", new_user_registration_path, id: "colorwh-head" %>
    <% end %>
  </div>
</div>
<div class="banner">
  <div class="container header-container">
    <h1><strong>Street Share</strong></h1>
    <p>The app for giving away and lending items in your local neighbourhood</p>

    <%= simple_form_for :search, url: items_path, method: :get, html: {class: 'form-inline'} do |f| %>
      <div class="search-form-control">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="ex: bike" />
        <input class="form-control string required w-100" type="text" name="search[location]" id="search_location" placeholder="ex: London" />
        <button name="button" type="submit" class="btn btn-flat search-btn">
          <i class="fas fa-search"></i> Search
        </button>
      </div>
    <% end %>

  </div>
</div>
