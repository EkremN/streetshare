<div class="banner-navbar">
  <%= image_tag 'road-icon.png', class: "logo-bordered" %>
   <div>
    <% if user_signed_in? %>
      <%= link_to "Account", user_show_path, id: "colorwh" %>
      <%= link_to "Log out", destroy_user_session_path, method: :delete, id: "colorwh" %>
    <% else %>
     <%= link_to "Sign in", new_user_session_path, id: "colorwh" %>
     <%= link_to "Sign up", new_user_registration_path, id: "colorwh" %>
    <% end %>
  </div>
</div>
<div class="banner">
  <div class="container header-container">
    <h1><strong>Street Share</strong></h1>
    <p>Easily find and borrow items that you need</p>

    <%= simple_form_for :search, url: items_path, method: :get, html: {class: 'form-inline'} do |f| %>
      <div class="search-form-control">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="ex: bike, barbeque" />
        <input class="form-control string required w-100" type="text" name="search[location]" id="search_location" placeholder="ex: Location" />
        <button name="button" type="submit" class="btn btn-flat search-btn">
          <i class="fas fa-search"></i> Search
        </button>
      </div>
    <% end %>

  </div>
</div>
